@model IronSchool.WebSite.Models.InstructorVM
@using IronSchool.WebSite.Helpers
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h2>
                @Resources.Resources.Instructor
                <small>@Resources.Resources.Details</small>
            </h2>
        </div>
        <div class="card-body card-padding">
            <div class="row">
                <fieldset>
                    @Html.BrowserFor(m => m.UserId, m => m.UserName, m => m.UserCompletedName, 8, "User")
                    @Html.FormFieldFor(m => m.ContactMail, 4, new { @disabled = true })
                    @Html.FormFieldFor(m => m.Address, 8, new { @disabled = true })
                    @Html.FormFieldFor(m => m.Salary, 4, new { @onkeydown = "onlyNumbers(this)", @disabled = true })
                    @Html.FormSelectFieldFor(m => m.Sex, (SelectList)ViewBag.SexList, Resources.Resources.Select, 4, new { @disabled = true })
                    @Html.FormFieldFor(m => m.BirthDate, 4, new { @type = "date", @disabled = true })
                    @Html.FormFieldFor(m => m.ContactPhone, 4, new { @disabled = true })
                </fieldset>
                @Html.BackButton()
            </div>
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/kendo")
    @Styles.Render("~/bundles/kendoStyles")

    <script type="text/javascript">
        $(function () {
            $('.browser-addon a').remove();
            $('input.browser-code').attr('readonly', true);
        });
    </script>

}